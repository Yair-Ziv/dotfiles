set $mod Mod4

set $bg-color 	         #2f343f
set $inactive-bg-color   #2f343f
set $text-color          #f3f4f5
set $inactive-text-color #676E7D
set $urgent-bg-color     #E53935

# Characters keycodes
# Found via xev command (tip: grep keycode)
set $a 38
set $b 56
set $c 54
set $d 40
set $e 26
set $f 41
set $g 42
